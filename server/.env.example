# Copy this file to .env and fill values
PORT=3000

# SMTP (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your@gmail.com
SMTP_PASS=your-app-password

# Email that receives the daily excel (defaults to SMTP_USER)
NOTIFY_TO=your@gmail.com
FROM_EMAIL=your@gmail.com

# Google Sheets (Service Account)
# Option A: provide a key file path on disk
# GOOGLE_KEYFILE_PATH=/full/path/to/service-account-key.json
# Option B: provide private key and client email directly (escape newlines in PRIVATE_KEY)
GOOGLE_SERVICE_ACCOUNT_EMAIL=service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"

# Spreadsheet where submissions are stored (single spreadsheet, per-day tabs)
SPREADSHEET_ID=your_google_spreadsheet_id_here

# Optional tuning
EMAIL_RETRIES=3
EMAIL_CONCURRENCY=2
